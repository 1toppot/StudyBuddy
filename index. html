    <script>
        // Data storage
        let data = {
            todos: [],
            routines: [],
            studySessions: []
        };

        // Load data from localStorage
        function loadData() {
            const saved = localStorage.getItem('studyAppData');
            if (saved) {
                data = JSON.parse(saved);
                renderTasks();
                renderRoutines();
                updateStats();
            }
        }

        // Save data to localStorage
        function saveData() {
            localStorage.setItem('studyAppData', JSON.stringify(data));
            updateStats();
        }

        // Tab switching
        function showTab(tabName) {
            document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(t => t.classList.remove('active'));
            event.target.classList.add('active');
            document.getElementById(tabName).classList.add('active');
        }

        // Tasks
        function addTask() {
            const input = document.getElementById('taskInput');
            const text = input.value.trim();
            if (text) {
                data.todos.push({
                    id: Date.now(),
                    text: text,
                    completed: false,
                    created: new Date().toISOString()
                });
                input.value = '';
                saveData();
                renderTasks();
            }
        }

        function toggleTask(id) {
            const task = data.todos.find(t => t.id === id);
            if (task) {
                task.completed = !task.completed;
                saveData();
                renderTasks();
            }
        }

        function deleteTask(id) {
            data.todos = data.todos.filter(t => t.id !== id);
            saveData();
            renderTasks();
        }

        function renderTasks() {
            const list = document.getElementById('taskList');
            if (data.todos.length === 0) {
                list.innerHTML = '<div class="empty-state"><h3>No tasks yet!</h3><p>Add your first task to get started ğŸš€</p></div>';
                return;
            }
            list.innerHTML = data.todos.map(task => `
                <li class="task-item ${task.completed ? 'completed' : ''}">
                    <span>${task.completed ? 'âœ…' : 'â­•'} ${task.text}</span>
                    <div class="task-actions">
                        <button onclick="toggleTask(${task.id})" class="btn-success">âœ“</button>
                        <button onclick="deleteTask(${task.id})" class="btn-danger">ğŸ—‘</button>
                    </div>
                </li>
            `).join('');
        }

        // Routines
        function addRoutine() {
            const input = document.getElementById('routineInput');
            const text = input.value.trim();
            const frequency = document.querySelector('input[name="frequency"]:checked').value;
            if (text) {
                data.routines.push({
                    id: Date.now(),
                    text: text,
                    frequency: frequency,
                    lastDone: null
                });
                input.value = '';
                saveData();
                renderRoutines();
            }
        }

        function completeRoutine(id) {
            const routine = data.routines.find(r => r.id === id);
            if (routine) {
                routine.lastDone = new Date().toISOString();
                saveData();
                renderRoutines();
            }
        }

        function deleteRoutine(id) {
            data.routines = data.routines.filter(r => r.id !== id);
            saveData();
            renderRoutines();
        }

        function renderRoutines() {
            const list = document.getElementById('routineList');
            if (data.routines.length === 0) {
                list.innerHTML = '<div class="empty-state"><h3>No routines yet!</h3><p>Add a routine to build good habits ğŸ’ª</p></div>';
                return;
            }
            list.innerHTML = data.routines.map(routine => {
                const lastDone = routine.lastDone ? new Date(routine.lastDone).toLocaleString() : 'Never';
                return `
                    <li class="task-item">
                        <div>
                            <strong>${routine.text}</strong><br>
                            <small>${routine.frequency} â€¢ Last done: ${lastDone}</small>
                        </div>
                        <div class="task-actions">
                            <button onclick="completeRoutine(${routine.id})" class="btn-success">âœ“ Done</button>
                            <button onclick="deleteRoutine(${routine.id})" class="btn-danger">ğŸ—‘</button>
                        </div>
                    </li>
                `;
            }).join('');
        }

        // Timer
        let timerInterval;
        let timerSeconds = 25 * 60;
        let timerRunning = false;

        function setTimer(minutes) {
            timerSeconds = minutes * 60;
            updateTimerDisplay();
        }

        function updateTimerDisplay() {
            const mins = Math.floor(timerSeconds / 60);
            const secs = timerSeconds % 60;
            document.getElementById('timerDisplay').textContent = 
                `${String(mins).padStart(2, '0')}:${String(secs).padStart(2, '0')}`;
        }

        function startTimer() {
            if (!timerRunning) {
                timerRunning = true;
                timerInterval = setInterval(() => {
                    if (timerSeconds > 0) {
                        timerSeconds--;
                        updateTimerDisplay();
                    } else {
                        pauseTimer();
                        alert('â° Time\'s up! Great work! ğŸ‰');
                        logStudySession();
                    }
                }, 1000);
            }
        }

        function pauseTimer() {
            timerRunning = false;
            clearInterval(timerInterval);
        }

        function resetTimer() {
            pauseTimer();
            timerSeconds = 25 * 60;
            updateTimerDisplay();
        }

        function logStudySession() {
            data.studySessions.push({
                date: new Date().toISOString(),
                duration: 25
            });
            saveData();
        }

        // AI Assistant
        const aiResponses = {
            math: `ğŸ“ Math Study Tips:

1. PRACTICE, don't just read!
   â€¢ Do 10+ problems per topic
   â€¢ Work through examples step-by-step

2. Learn formulas actively:
   â€¢ Write them out 5 times
   â€¢ Use them in different problems

3. Understand, don't memorize:
   â€¢ Ask "why does this work?"
   â€¢ Draw diagrams for word problems

4. Check your work:
   â€¢ Plug answers back in
   â€¢ Does it make sense?

ğŸ’¡ Math is a skill - practice makes perfect!`,

            science: `ğŸ”¬ Science Study Tips:

1. Connect concepts to real life
   â€¢ How does this apply around you?

2. Draw diagrams and charts
   â€¢ Visual learning helps memory

3. Teach someone else
   â€¢ If you can teach it, you know it!

4. Make flashcards for terms
   â€¢ Review daily

5. Study processes step-by-step
   â€¢ Break complex cycles into stages

ğŸŒŸ Stay curious!`,

            language: `ğŸ“š Language/English Tips:

1. Read actively:
   â€¢ Highlight key points
   â€¢ Take notes while reading

2. Build vocabulary daily:
   â€¢ Learn 5 new words/day
   â€¢ Use them in sentences

3. Practice writing:
   â€¢ Write paragraphs daily
   â€¢ Keep a journal

4. For essays:
   â€¢ Plan before writing (outline!)
   â€¢ Introduction + Body + Conclusion

âœï¸ Good writing = clear thinking!`,

            history: `ğŸ›ï¸ History Study Tips:

1. Create timelines
   â€¢ Visual sequence of events

2. Use memory tricks
   â€¢ Acronyms for dates
   â€¢ Stories to remember facts

3. Understand WHY, not just WHAT
   â€¢ Why did events happen?

4. Make connections
   â€¢ How do events relate?

5. Use maps
   â€¢ Where did things happen?

â° History is YOUR story!`,

            study: `ğŸ“ General Study Tips:

1. POMODORO TECHNIQUE:
   â€¢ Study 25 min â†’ Break 5 min
   â€¢ Use the timer in this app!

2. ACTIVE LEARNING:
   â€¢ Don't just read - DO!
   â€¢ Test yourself often

3. SPACED REPETITION:
   â€¢ Review: Day 1, 3, 7, 14

4. STUDY ENVIRONMENT:
   â€¢ Quiet, well-lit space
   â€¢ Remove distractions

5. BEFORE EXAMS:
   â€¢ Start 1 week before
   â€¢ Sleep well!

ğŸ’ª Consistency beats intensity!`,

            motivation: `ğŸ’ª Stay Motivated!

Remember:
â€¢ Small progress is STILL progress
â€¢ You're building your future NOW
â€¢ Every study session counts
â€¢ It's okay to struggle sometimes
â€¢ Rest, then try again

ğŸš€ You're doing AMAZING!
Keep pushing forward! ğŸŒŸ

Your dedication today = success tomorrow!`,

            notes: `ğŸ“ Note-Taking Tips:

1. CORNELL METHOD:
   â€¢ Notes | Cues | Summary
   â€¢ Review by covering notes

2. Don't copy everything
   â€¢ Write in your own words
   â€¢ Add questions in margins

3. COLOR CODING:
   â€¢ Different colors = topics
   â€¢ Helps visual memory

4. REVIEW within 24 hours!

ğŸ’¡ Good notes = half the work done!`,

            exam: `ğŸ“‹ Exam Prep Guide:

WEEK BEFORE:
âœ“ Organize materials
âœ“ Make study schedule
âœ“ Identify weak areas

3-4 DAYS BEFORE:
âœ“ Review all material
âœ“ Do practice tests
âœ“ Study with friends

DAY BEFORE:
âœ“ Light review only
âœ“ Sleep 8+ hours!
âœ“ Don't cram!

EXAM DAY:
âœ“ Good breakfast
âœ“ Arrive early
âœ“ Read all instructions
âœ“ Answer easy questions first

ğŸ’ª You've got this!`
        };

        function askAI(topic) {
            const chat = document.getElementById('aiChat');
            const response = aiResponses[topic] || 'I can help with that! Choose a topic above or ask me something specific.';
            
            chat.innerHTML += `<div class="ai-message bot"><strong>AI:</strong><br>${response.replace(/\n/g, '<br>')}</div>`;
            chat.scrollTop = chat.scrollHeight;
        }

        function sendAIMessage() {
            const input = document.getElementById('aiInput');
            const message = input.value.trim();
            if (!message) return;

            const chat = document.getElementById('aiChat');
            chat.innerHTML += `<div class="ai-message user"><strong>You:</strong><br>${message}</div>`;
            
            input.value = '';

            // Simple AI response
            setTimeout(() => {
                let response = "That's a great question! ";
                if (message.toLowerCase().includes('math')) response += aiResponses.math;
                else if (message.toLowerCase().includes('science')) response += aiResponses.science;
                else if (message.toLowerCase().includes('motivat')) response += aiResponses.motivation;
                else if (message.toLowerCase().includes('exam') || message.toLowerCase().includes('test')) response += aiResponses.exam;
                else response += "Try clicking one of the topic buttons above for detailed tips! ğŸ˜Š";

                chat.innerHTML += `<div class="ai-message bot"><strong>AI:</strong><br>${response.replace(/\n/g, '<br>')}</div>`;
                chat.scrollTop = chat.scrollHeight;
            }, 500);
        }

        // Stats
        function updateStats() {
            document.getElementById('totalTasks').textContent = data.todos.length;
            document.getElementById('completedTasks').textContent = data.todos.filter(t => t.completed).length;
            document.getElementById('totalRoutines').textContent = data.routines.length;
            
            const today = new Date().toDateString();
            const sessionsToday = data.studySessions.filter(s => 
                new Date(s.date).toDateString() === today
            ).length;
            document.getElementById('studySessions').textContent = sessionsToday;
        }

        // Initialize
        loadData();
        updateTimerDisplay();
    </script>
</body>
</html>
