<body>
    <div class="container">
        <div class="header">
            <h1>ğŸ“ AI Study & Productivity App</h1>
            <p>Your personal study assistant</p>
        </div>

        <div class="tabs">
            <button class="tab active" onclick="showTab('tasks')">ğŸ“ Tasks</button>
            <button class="tab" onclick="showTab('routines')">ğŸ”„ Routines</button>
            <button class="tab" onclick="showTab('timer')">â° Timer</button>
            <button class="tab" onclick="showTab('ai')">ğŸ¤– AI</button>
            <button class="tab" onclick="showTab('stats')">ğŸ“Š Stats</button>
        </div>

        <!-- Tasks Tab -->
        <div id="tasks" class="tab-content active">
            <h2>Your Tasks</h2>
            <div class="input-group">
                <input type="text" id="taskInput" placeholder="Enter a new task..." onkeypress="if(event.key==='Enter') addTask()">
                <button onclick="addTask()" class="btn-success">Add Task</button>
            </div>
            <ul id="taskList" class="task-list"></ul>
        </div>

        <!-- Routines Tab -->
        <div id="routines" class="tab-content">
            <h2>Your Routines</h2>
            <div class="input-group">
                <input type="text" id="routineInput" placeholder="Enter a new routine...">
            </div>
            <div class="radio-group">
                <label><input type="radio" name="frequency" value="daily" checked> Daily</label>
                <label><input type="radio" name="frequency" value="weekly"> Weekly</label>
            </div>
            <button onclick="addRoutine()" class="btn-success">Add Routine</button>
            <br><br>
            <ul id="routineList" class="task-list"></ul>
        </div>

        <!-- Timer Tab -->
        <div id="timer" class="tab-content">
            <h2>Study Timer (Pomodoro)</h2>
            <div class="timer-display" id="timerDisplay">25:00</div>
            <div class="timer-presets">
                <button onclick="setTimer(25)" class="btn-success">25 min (Study)</button>
                <button onclick="setTimer(5)" class="btn-warning">5 min (Break)</button>
                <button onclick="setTimer(15)" class="btn-warning">15 min (Long Break)</button>
            </div>
            <div class="timer-controls">
                <button onclick="startTimer()" class="btn-success">â–¶ Start</button>
                <button onclick="pauseTimer()" class="btn-warning">â¸ Pause</button>
                <button onclick="resetTimer()" class="btn-danger">ğŸ”„ Reset</button>
            </div>
            <p style="text-align: center; color: #666;">ğŸ’¡ Tip: Focus for 25 minutes, then take a 5-minute break!</p>
        </div>

        <!-- AI Assistant Tab -->
        <div id="ai" class="tab-content">
            <h2>ğŸ¤– AI Study Assistant</h2>
            <div class="ai-options">
                <button onclick="askAI('math')">ğŸ“ Math Tips</button>
                <button onclick="askAI('science')">ğŸ”¬ Science Tips</button>
                <button onclick="askAI('language')">ğŸ“š Language Tips</button>
                <button onclick="askAI('history')">ğŸ›ï¸ History Tips</button>
                <button onclick="askAI('study')">ğŸ“ Study Tips</button>
                <button onclick="askAI('motivation')">ğŸ’ª Motivation</button>
                <button onclick="askAI('notes')">ğŸ“ Note Taking</button>
                <button onclick="askAI('exam')">ğŸ“‹ Exam Prep</button>
            </div>
            <div class="ai-chat" id="aiChat">
                <div class="ai-message bot">
                    <strong>AI Assistant:</strong><br>
                    Hello! I'm your study assistant. Click any button above to get tips, or ask me a question below! ğŸ˜Š
                </div>
            </div>
            <div class="input-group">
                <input type="text" id="aiInput" placeholder="Ask me anything about studying..." onkeypress="if(event.key==='Enter') sendAIMessage()">
                <button onclick="sendAIMessage()">Send</button>
            </div>
        </div>

        <!-- Stats Tab -->
        <div id="stats" class="tab-content">
            <h2>Your Statistics</h2>
            <div class="stats-grid">
                <div class="stat-card">
                    <h3 id="totalTasks">0</h3>
                    <p>Total Tasks</p>
                </div>
                <div class="stat-card">
                    <h3 id="completedTasks">0</h3>
                    <p>Completed</p>
                </div>
                <div class="stat-card">
                    <h3 id="totalRoutines">0</h3>
                    <p>Active Routines</p>
                </div>
                <div class="stat-card">
                    <h3 id="studySessions">0</h3>
                    <p>Study Sessions Today</p>
                </div>
            </div>
        </div>
